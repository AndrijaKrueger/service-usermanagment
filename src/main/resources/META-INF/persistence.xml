<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="UserDb_PU" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>de.xcrossworx.service.usermanagment.model.User</class>
        <class>de.xcrossworx.service.usermanagment.model.Contact</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/userServiceDb" />

            <property name="javax.persistence.jdbc.user" value="serviceUserDb"/>
            <property name="javax.persistence.jdbc.password" value="Neustart-123"/>


            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <!--<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />-->

        </properties>


    </persistence-unit>
</persistence>
